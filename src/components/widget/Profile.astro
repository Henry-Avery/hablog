---
import WidgetLayout from './WidgetLayout.astro';
import profileData from '../../data/profile.json';

const { name, avatar, bio, links } = profileData;
---

<WidgetLayout id="profile-widget" name="Profile">
	<div class="flex flex-col items-center">
		<!-- Avatar -->
		<a
			href="/about"
			class="group relative block w-32 h-32 rounded-full overflow-hidden mb-4 transition-transform duration-300 hover:scale-105 active:scale-95"
		>
			<div class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition-colors duration-300 z-10 flex items-center justify-center">
				<svg
					class="w-8 h-8 text-white opacity-0 group-hover:opacity-100 scale-90 group-hover:scale-100 transition-all duration-300"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
				>
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
				</svg>
			</div>
			<img
				src={avatar}
				alt={`${name}'s avatar`}
				class="w-full h-full object-cover"
			/>
		</a>

		<!-- Name -->
		<h3 class="font-bold text-xl mb-2">{name}</h3>

		<!-- Divider -->
		<div class="w-5 h-1 bg-primary rounded-full mb-3"></div>

		<!-- Bio -->
		<p class="text-sm text-center opacity-70 mb-4">{bio}</p>

		<!-- Social Links -->
		<div class="flex gap-2 justify-center">
			{links.map((link) => (
				<a
					href={link.url}
					target={link.url.startsWith('http') ? '_blank' : undefined}
					rel={link.url.startsWith('http') ? 'noopener noreferrer' : undefined}
					class="btn btn-ghost btn-sm btn-circle transition-all duration-150 hover:scale-110 active:scale-90"
					aria-label={link.name}
					title={link.name}
				>
					{link.icon.includes('github') && (
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
					)}
					{link.icon.includes('envelope') && (
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
						</svg>
					)}
					{link.icon.includes('rss') && (
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
							<path d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248-1.796 0-3.252-1.454-3.252-3.248 0-1.794 1.456-3.248 3.252-3.248 1.795.001 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"/>
						</svg>
					)}
				</a>
			))}
		</div>
	</div>
</WidgetLayout>
