---
export interface Props {
	url: string;
	badge?: string;
	label?: string;
	class?: string;
}

const { url, badge, label, class: className } = Astro.props;
---

<a
	href={url}
	aria-label={label}
	class:list={[
		"flex items-center justify-between",
		"px-3 py-2 rounded-lg",
		"transition-all duration-150",
		"hover:bg-base-300",
		"hover:pl-4",
		"active:scale-[0.98]",
		"group",
		className
	]}
>
	<span class="transition-colors duration-150 group-hover:text-primary">
		<slot />
	</span>
	{badge && (
		<span class="badge badge-sm badge-ghost ml-2">
			{badge}
		</span>
	)}
</a>
